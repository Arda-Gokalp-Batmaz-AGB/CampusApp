<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.CampusLink" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/clickcolor</item>
        <item name="android:windowTranslucentStatus">
            false
        </item>
    </style>
    <style name="Theme.SplashScreenTheme" parent="Theme.CampusLink">
        <item name="windowSplashScreenBackground">@color/clickcolor</item>
        <item name="android:windowBackground">@drawable/splash_dark</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_dark</item>
        <item name="windowSplashScreenAnimationDuration">900</item>
        <item name="postSplashScreenTheme">@style/Theme.CampusLink</item>
    </style>
</resources>